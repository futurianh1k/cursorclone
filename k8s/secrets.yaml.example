# Kubernetes Secrets 예시
# 실제 사용 시 kubectl create secret 명령어로 생성하거나 sealed-secrets 사용

apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: cursor-poc
type: Opaque
stringData:
  username: postgres
  password: CHANGE_ME_STRONG_PASSWORD
---
apiVersion: v1
kind: Secret
metadata:
  name: api-secret
  namespace: cursor-poc
type: Opaque
stringData:
  database-url: postgresql+asyncpg://postgres:CHANGE_ME@postgres:5432/cursor_poc
  jwt-secret-key: CHANGE_ME_JWT_SECRET_KEY
  master-encryption-key: CHANGE_ME_ENCRYPTION_KEY
  vllm-api-key: CHANGE_ME_VLLM_API_KEY
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: api-config
  namespace: cursor-poc
data:
  vllm-base-url: "http://vllm-service:8001/v1"
